<section id="contact" class="contact-page">
	<div class="container-fluid">
		<!-- Section heading -->
		<h2 class="font-weight-bold text-center mb-5">Contact Me</h2>
		<!-- Section description -->
		<p class="text-center mx-auto pb-5">Feel free to use the contact form below to reach out to me. <br> If forms aren't your thing, no problem! Send me an email at <a href="mailto:hello@keithmckenna.com?&subject=Howdy!&body=Hey Keith! How's it going?">hello@keithmckenna.com</a></p>

		<!-- Grid row -->
		<div class="row justify-content-center">

			<!-- Grid column -->
			<div class="wow slideInLeft col-lg-4 mb-lg-0 mb-4">

				<!-- Form with header -->
				<div class="card">
					<div class="card-body">
						<!-- Header -->
						<div class="form-header gold accent">
							<h4 class="mt-2">
								<i class="fas fa-envelope"></i> Write to me:</h4>
						</div>
						<p class="dark-grey-text">I typically reply to every message within 24 hours.</p>
						<!-- Body -->
						<form action="/contact" id="contact-form" method="post" role="form">
							<fieldset>
								<div class="contact-form">
									<i class="fas fa-user prefix grey-text"></i>
									<input type="text" id="name" name="name" class="form-control" required>
									<label class="form-control-placeholder" for="name">Your Name</label>
								</div>
								<div class="contact-form">
									<i class="fas fa-envelope prefix grey-text"></i>
									<input type="email" id="email" name="email" class="form-control" required>
									<label class="form-control-placeholder" for="email">Your Email</label>
								</div>
								<div class="contact-form">
									<i class="fas fa-tag prefix grey-text"></i>
									<input type="text" name="subject" id="subject" class="form-control" required>
									<label class="form-control-placeholder" for="subject">Subject</label>
								</div>
								<div class="contact-form">
									<i class="fas fa-pencil-alt prefix grey-text"></i>
									<textarea name="message" id="message" class="form-control contact-textarea" rows="3" required></textarea>
									<label for="message" class="form-control-placeholder">Send Message</label>
								</div>
								<div class="contact-form">
									<i class="fas fa-robot prefix grey-text"></i>
									<input type="number" name="verification" id="verification" class="form-control" step="1" min="0" max="10" pattern="\d*" required>
									<label class="form-control-placeholder" for="verification">Bot verification: what is four plus three?</label>
								</div>
								<div class="text-center">
									<button class="btn contact-btn submit-btn dark">Submit</button>
								</div>
							</fieldset>
						</form>
					</div>
				</div>
				<!-- Form with header -->

			</div>
			<!-- Grid column -->

			<!-- Grid column -->
			<div class="wow slideInRight col-lg-5">

				<!--Google map-->
				<div id="map-container-section" class="z-depth-1-half map-container-section mb-4" style="height: 400px">
					<iframe src="https://maps.google.com/maps?q=Sioux%20Falls&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" style="border:0" allowfullscreen></iframe>
				</div>
				<!-- Buttons-->
				<div class="row text-center">
					<div class="col-md-4">
						<div class="btn-floating gold accent">
							<i class="wow fadeInDown fas fa-map-marker-alt"></i>
						</div>
						<p>Located:</p>
						<p class="mb-md-0">Sioux Falls, SD</p>
					</div>
					<div class="col-md-4">
						<a href="sms:+16057772434&body=Hi Keith! I'm currently on your website and I'd like to connect with you." class="btn-floating gold accent">
