<section id="contact" class="contact-page">
	<div class="container-fluid">
		<!-- Section heading -->
		<h2 class="font-weight-bold text-center mb-5">Contact Me</h2>
		<!-- Section description -->
		<p class="text-center mx-auto pb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, error amet numquam iure provident voluptate esse quasi, veritatis totam voluptas nostrum quisquam eum porro a pariatur veniam.</p>

		<!-- Grid row -->
		<div class="row justify-content-center">

			<!-- Grid column -->
			<div class="col-lg-4 mb-lg-0 mb-4">

				<!-- Form with header -->
				<div class="card">
					<div class="card-body">
						<!-- Header -->
						<div class="form-header gold accent">
							<h4 class="mt-2">
								<i class="fas fa-envelope"></i> Write to me:</h4>
						</div>
						<p class="dark-grey-text">We'll write rarely, but only the best content.</p>
						<!-- Body -->
						<form action="/contact" id="contact-form" method="post" role="form">
							<fieldset>
								<div class="contact-form">
									<i class="fas fa-user prefix grey-text"></i>
									<input type="text" id="name" name="name" class="form-control" placeholder="Your Name" required>
								</div>
								<div class="contact-form">
									<i class="fas fa-envelope prefix grey-text"></i>
									<input type="email" id="email" name="email" class="form-control" placeholder="Your Email" required>
								</div>
								<div class="contact-form">
									<i class="fas fa-tag prefix grey-text"></i>
									<input type="text" name="subject" id="subject" class="form-control" placeholder="Subject (Ex. Feedback, Report A Bug, Let's create something!, etc.)">
								</div>
								<div class="contact-form">
									<i class="fas fa-pencil-alt prefix grey-text"></i>
									<textarea name="message" id="message" class="form-control contact-textarea" rows="3" placeholder="Send Message" required></textarea>
								</div>
								<div class="text-center">
									<button class="btn contact-btn dark">Submit</button>
								</div>
							</fieldset>
						</form>
					</div>
				</div>
				<!-- Form with header -->

			</div>
			<!-- Grid column -->

